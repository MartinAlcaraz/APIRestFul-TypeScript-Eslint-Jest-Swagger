{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "standard",
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    }, 
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-trailing-spaces": ["error", { "skipBlankLines": true }],
        "padded-blocks": ["error", { "blocks": "never" }],
        "@typescript-eslint/no-unused-vars": "error",
        "indent": "off",
        "@typescript-eslint/indent": ["error", 4]
    }
}